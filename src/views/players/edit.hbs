              <label for="inputGroupFile" class="custom-file-label">Choose File</label>
            </div>
          </div>
        </div>
      

      </div>
      !-->

      <div class="container-fluid">
        <button type="submit" class="btn btn-primary">Actualizar Jugador</button>

      </div>
    </form>

</div>