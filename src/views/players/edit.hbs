<div class="container">
    <form action="/players/edit/{{player._id}}" method="POST" >
      <div class="container-fluid form-row">
        <div class="form-group col-md-6 col-offset 1">
          <label for="ci"> Cedula</label>
          <input type="number" class="form-control" id="ci" value={{player.ci}} name="ci" required>
        </div>

        <div class="form-group col-md-6">
          <label for="name">Nombres:</label>
          <input type="text" class="form-control" id="name" value={{player.name}} name="name" required>
        </div>

        <div class="form-group col-md-6">
          <label for="last_name">Apellidos:</label>
          <input type="text" class="form-control" id="last_name" value={{player.last_name}} name="last_name">
        </div>

        <div class="form-group col-md-6">
          <label for="phone">Telefono:</label>
          <input type="number" class="form-control" id="phone" value={{player.phone}} name="phone">
        </div>
        <div class="form-group col-md-6">
          <label for="email">Email</label>
          <input type="mail" class="form-control" id="email" value={{player.email}} name="email">
        </div>

      <div class="form-group col-md-6">
        <label for="address">Direccion:</label>
        <input type="text" class="form-control" id="address" value={{player.address}} name="address">
      </div>

      <div class="form-group col-md-6">
        <label for="birthday">Fecha de nacimiento:</label>
        <input type="date" class="form-control" id="birthday" value={{player.birthday}} name="birthday">
      </div>

      </div>

      <div class="container-fluid form-row">

        <div class="form-group col-md-6">
          <label for="team">Team</label>
          <select id="team" class="form-control" name="team">
            {{#each teams}}
            <option value={{name}}>{{name}}</option>
            {{/each}}
          </select>
        </div>
      </div>



        <div class="form-group col-md-2">
          <label for="number_player">Numero de Cancha</label>
          <input type="number" class="form-control" id="number_player" name="number_player" value={{player.number_player}}>
        </div>

